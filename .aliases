alias gcom='git add . && git commit'
alias :q='exit'
alias colorscheme='wal --preview'
alias refresh='clear && exec $SHELL -l'
alias topz='echo "    PID USER      PR  NI    VIRT    RES    SHR S  %CPU  %MEM     TIME+" && top -b -n 1 | fzf'
alias clc='clear'
alias music='spotify-tui'
alias ed='nvim -u $HOME/.config/nvim/general.vim'
alias query='xbps-query -R -s'
alias get='sudo xbps-install'
alias remove='sudo xbps-remove'
alias config='git --git-dir=$HOME/repos/avoidance-inspiron-dotfiles --work-tree=$HOME'
alias ls='ls -Ahl --color=auto'
alias rando_bg='feh --bg-fill --randomize $HOME/Pictures'
alias texed='nvim -u $HOME/.config/nvim/latex.vim'
alias mded='nvim -u $HOME/.config/nvim/markdown.vim'
